html, body
  height 100%
  width  100%

  themifyAll({
    font:       main-font,
    background: main-bg-color,
    color:      main-txt-color,
  }, true)


*,
*:before,
*:after
  box-sizing border-box

.histogram
  &__axis
    &__legend
      font-size 14px
      themify: fill chart-axis-txt-color

.settings
  z-index 10000
  position absolute
  right  2vmin
  bottom 2vmin
  background #eee
  color      #555
  box-shadow 0 1px 1px rgba(0, 0, 0, .35)
  border-radius 2px
  font-size 1.6vmin
  width  30vmin
  height 30vmin
  padding 2vmin
  transform translate(0, 24vmin)
  opacity 0
  transform-origin 100% 100%
  transition unquote("all 200ms cubic-bezier(0.250, 0.460, 0.450, 0.940)")

  &:hover
    opacity 1
    transform translate(0, 0)

  &__item
    cursor pointer
    display block

h1, h2, h3, h4, h5, h6
  font-family: 'Montserrat', sans-serif
  text-transform: uppercase
  font-weight: 400

.txt--success
  themify: color success-color

.prop__key
  themify: color prop-key-txt-color

.prop__value
  themify: color prop-value-txt-color
